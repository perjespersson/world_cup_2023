<div class="row bg-white border-radius m-0 mb-4 box-shadow border">
  <div class="col-lg-12">
    <h4 class="text-center p-4 mb-0">Matcher</h4>

    <% @games_by_date.each do |row| %>
      <h6 class="border-radius text-center fs-7 p-3 mb-0" style="background: #f4f4f4;"><b><%= row["date"].strftime("%d %B %Y") %></b></h6>

      <% row["games"].each do |game| %>
        <%= link_to edit_game_path(game[7]), class: 'd-flex justify-content-center align-items-center text-decoration-none p-4 link-dark border-radius custom-background table-border-bottom' do %>
          <div class="d-flex justify-content-end team-width">
            <div class="d-flex left-team">
              <%= image_tag("flags/#{game[5]}") %>
              <p class="fs-7 my-auto"><%= game[2] %></p>
            </div>
          </div>

          <div class="game_date_time">
            <% if game[0].nil? && game[1].nil? %>
              <p class="text-center my-auto"><%= DateTime.parse(game[4]).strftime("%H:%M") %></p>
            <% else %>
              <p class="text-center my-auto"><%= game[0] %> - <%= game[1] %></p>
            <% end %>
          </div>

          <div class="d-flex justify-content-start team-width">
            <div class="d-flex right-team">
              <%= image_tag("flags/#{game[6]}") %>
              <p class="fs-7 my-auto"><%= game[3] %></p>
            </div>
          </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>