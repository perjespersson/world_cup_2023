<div class="row bg-white border-radius mt-4">
  <div class="col-lg-12 p-0">
    <h3 class="text-center p-3">Matcher</h3>

    <% @games_by_date.each do |row| %>
      <h5 class="border-bottom border-top p-3"><%= row["date"] %></h5>

      <% row["games"].each do |game| %>
        <a href="#" class="d-flex justify-content-center align-items-center p-3">
          <div style="width: calc(50% - 70px);">
            <p class="text-end my-auto pe-3"><%= game[2] %></p>
          </div>

          <div style="width: 40px;">
            <%= image_tag("flags/#{game[5]}", size: "32x32", class: "mx-auto my-auto d-block") %>
          </div>

          <div style="width: 60px;">
            <% if game[0].nil? && game[1].nil? %>
              <p class="text-center my-auto"><%= DateTime.parse(game[4]).strftime("%H:%M") %></p>
            <% else %>
              <p class="text-center my-auto"><%= game[0] %> - <%= game[1] %></p>
            <% end %>
          </div>

          <div style="width: 40px;">
            <%= image_tag("flags/#{game[6]}", size: "32x32", class: "mx-auto my-auto d-block") %>
          </div>

          <div style="width: calc(50% - 70px);">
            <p class="text-start my-auto ps-3"><%= game[3] %></p>
          </div>
        </a>
      <% end %>
    <% end %>
  </div>
</div>