<div class="row bg-white border-radius mt-5">
  <div class="col-lg-12 p-0">
    <h3 class="text-center p-3">Matcher</h3>

    <% @games_by_date.each do |row| %>
      <h5 class="border-bottom border-top p-3"><%= row["date"] %></h5>

      <% row["games"].each do |game| %>
        <!-- If not played, show time. Otherwise score -->
        <!-- TODO: Make it into a partial? -->
        <div class="d-flex justify-content-center align-items-center p-3">
          <div style="width: calc(50% - 70px);">
            <p class="text-end my-auto pe-3"><%= game[2] %></p>
          </div>

          <div style="width: 40px;">
            <%= image_tag("flags/nederlanderna.png", size: "32x32", class: "mx-auto my-auto d-block") %>
          </div>

          <div style="width: 60px;">
            <p class="text-center my-auto"><%= game[0] %> - <%= game[1] %></p>
          </div>

          <div style="width: 40px;">
            <%= image_tag("flags/norge.png", size: "32x32") %>
          </div>

          <div style="width: calc(50% - 70px);">
            <p class="text-start my-auto ps-3"><%= game[3] %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>