<%= form_for @game do |f| %>
  <div class="row bg-white border-radius m-0 mb-4">
    <div class="col-lg-12">
      <h3 class="text-center p-3 border-bottom">Gruppmatch</h3>
        <div class="d-flex justify-content-center align-items-center p-3 border-bottom">

          <div style="width: calc(50% - 120px);">
            <p class="text-end my-auto pe-3 h4"><%= @game.home_team.name %></p>
          </div>

          <div style="width: 50px;">
            <%= image_tag("flags/#{@game.home_team.img}", size: "42x42", class: "mx-auto my-auto d-block") %>
          </div>

          <div class="d-flex justify-content-evenly" style="width: 140px;">
            <%= f.number_field :home_team_score, min: 0, class: "form-control text-center", style: "width: 50px; height: 50px;", value: @game.home_team_score %>
            <%= f.number_field :away_team_score, min: 0, class: "form-control text-center", style: "width: 50px; height: 50px;", value: @game.away_team_score %>
          </div>

          <div style="width: 50px;">
            <%= image_tag("flags/#{@game.away_team.img}", size: "42x42", class: "mx-auto my-auto d-block") %>
          </div>

          <div style="width: calc(50% - 120px);">
            <p class="text-start my-auto ps-3 h4"><%= @game.away_team.name %></p>
          </div>
        </div>

      <p class="text-center">Grupp A - 27 Juni, 15:00</p>
    </div>
  </div>

  <div class="row m-0 mt-4">
    <div class="col-lg-12 p-0">
      <%= f.submit "Spara", class: "btn btn-primary" %>
    </div>
  </div>
<% end %>


