<% user_bets.each do |bet| %>
  <div class="d-flex text-center border-bottom m-0">
    <div class="p-4" style="width: 33.3%;">
      <p class="m-0 p-2 border-radius" style="background-color: <%= bet_color(bet, "1") %>"><%= bet["home_team"] %></p>
    </div>

    <div class="p-4" style="width: 33.3%;">
      <p class="m-0 p-2 border-radius" style="background-color: <%= bet_color(bet, "x") %>">X</p>
    </div>

    <div class="p-4" style="width: 33.3%;">
      <p class="m-0 p-2 border-radius" style="background-color: <%= bet_color(bet, "2") %>"><%= bet["away_team"] %></p>
    </div>
  </div>
<% end %>