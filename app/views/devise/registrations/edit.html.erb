<div class="d-flex justify-content-center">
  <div class="border-radius bg-white border box-shadow ps-4 pe-4">
    <h2 class="text-center mb-4 mt-4">Redigera</h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field mb-3">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Epost", class: "p-2 ps-3 border-radius border-0", style: "width: 300px; background: #f4f4f4;" %>
      </div>

      <!-- TODO: Add back email change mail? -->
      <div class="field mb-3">
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Lösenord (Minst 6 tecken)", class: "p-2 ps-3 border-radius border-0", style: "width: 300px; background: #f4f4f4;" %>
      </div>

      <div class="field mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Bekräfta lösenord", class: "p-2 ps-3 border-radius border-0", style: "width: 300px; background: #f4f4f4;" %>
      </div>

      <div class="field mb-3">
        <%= f.password_field :current_password, autocomplete: "current-password", placeholder: "Gammal lösenord", class: "p-2 ps-3 border-radius border-0", style: "width: 300px; background: #f4f4f4;" %>
      </div>

      <div class="actions d-grid gap-2 mb-3">
        <%= f.submit "Uppdatera", class: "btn btn-primary border-radius" %>
      </div>
    <% end %>
  </div>
</div>

<div class="d-flex justify-content-center mt-4">
  <div class="border-radius bg-white border box-shadow ps-4 pe-4">

    <h2 class="text-center mb-4 mt-4">Säg upp konto</h2>

    <div class="actions d-grid gap-2 mb-3">
      <!-- TODO: add nicer popup/modal -->
      <%= button_to "Säg upp", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete, class: "btn btn-danger border-radius", style: "width: 300px;" %>
    </div>
  </div>
</div>