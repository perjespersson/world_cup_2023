<div class="d-flex justify-content-center">
  <div class="border-radius bg-white border box-shadow ps-4 pe-4">
    <h2 class="text-center mb-4 mt-4">Ändra lösenord</h2>

    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <%= f.hidden_field :reset_password_token %>

      <div class="field mb-3">
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", placeholder: "Lösenord (Minst 6 tecken)", class: "p-2 ps-3 border-radius border-0", style: "width: 300px; background: #f4f4f4;" %>
      </div>

      <div class="field mb-3">
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Bekräfta lösenord", class: "p-2 ps-3 border-radius border-0", style: "width: 300px; background: #f4f4f4;" %>
      </div>

      <div class="actions d-grid gap-2 mb-3">
        <%= f.submit "Ändra lösenord", class: "btn btn-primary border-radius" %>
      </div>
    <% end %>

    <%= link_to "Logga in", new_session_path(resource_name), class: "d-block text-center text-decoration-none fs-7 mb-2 p-0" %>
    <hr class="m-0 mb-2 p-0 text-black-50">
    <%= link_to "Bli medlem", new_registration_path(resource_name), class: "d-block text-center text-decoration-none fs-7 mb-3" %>
  </div>
</div>
